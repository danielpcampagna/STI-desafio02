<p id="notice"><%= notice %></p>

<%= react_component("SuggestBar") %>

<h1>Stations</h1>

<table>
  <thead>
    <tr>
      <th>Neighborhood</th>
      <th>Station</th>
      <th>Code</th>
      <th>Address</th>
      <th>Number</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.neighborhood %></td>
        <td><%= station.station %></td>
        <td><%= station.code %></td>
        <td><%= station.address %></td>
        <td><%= station.number %></td>
        <td><%= station.latitude %></td>
        <td><%= station.longitude %></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Station', new_station_path %>
